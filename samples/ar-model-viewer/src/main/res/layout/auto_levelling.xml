<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@drawable/renderable_background">
    
    <!-- Image View for automatic leveling -->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/auto_levelling"/>
    
    <!-- Description TextView for the image -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Automatic Leveling Process"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />
    
    <!-- Additional description for context -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This feature automatically levels the equipment for optimal operation. The process ensures that the device is correctly positioned for precise function."
            android:textColor="@android:color/black"
            android:paddingTop="8dp" />
</LinearLayout>