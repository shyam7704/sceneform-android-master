<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    
    <!-- Main App Content -->
    <include layout="@layout/activity_main1" />
    
    <!-- Onboarding Overlay -->
    <RelativeLayout
            android:id="@+id/onboarding_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="visible">
        
        <!-- Highlight ImageButton -->
        <View
                android:id="@+id/highlight_imagebutton"
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/highlight_border" />
        
        <!-- Tutorial Text -->
        <TextView
                android:id="@+id/tutorial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/highlight_imagebutton"
                android:layout_centerHorizontal="true"
                android:padding="16dp"
                android:text="Tap here to start experiencing the app!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        
        <!-- Skip Button -->
        <Button
                android:id="@+id/skip_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:text="Skip"
                android:background="@color/white"
                android:textColor="@color/black" />
    </RelativeLayout>
</FrameLayout>
