<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D3A87">
    
    <!-- Main Content -->
    <ImageButton
            android:id="@+id/place_button"
            android:layout_width="325dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:src="@drawable/group_5"
            android:background="@drawable/group_5"/>
    
    <Button
            android:id="@+id/home_button"
            android:layout_width="70dp"
            android:layout_height="61dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:alpha="0"/>
    
    <Button
            android:id="@+id/settings_button"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:alpha="0"/>
    <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@drawable/backbutton" />
    
    <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:srcCompat="@drawable/bo" />
    
    <!-- Onboarding Overlay -->
    <RelativeLayout
            android:id="@+id/onboarding_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:visibility="visible">
        
        <!-- Highlights -->

        <!-- Tutorial Text -->

        <!-- Navigation Buttons -->
        <View
                android:id="@+id/highlight_place_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/arrow"
                android:visibility="visible" android:layout_marginTop="63dp"
                android:layout_below="@+id/tutorial_text" android:layout_alignParentEnd="true"
                android:layout_marginEnd="42dp"/>

        <TextView
                android:id="@+id/tutorial_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Welcome to the tutorial!"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" android:layout_alignParentEnd="true"
                android:layout_marginEnd="94dp" android:layout_alignParentStart="true"
                android:layout_marginStart="93dp" android:layout_marginTop="290dp"
                android:layout_alignParentTop="true"/>
<!--        <Button-->
<!--                android:id="@+id/next_button"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_alignParentBottom="true"-->
<!--                android:layout_marginBottom="32dp"-->
<!--                android:text="Next"-->
<!--                android:background="@color/white"-->
<!--                android:textColor="@color/black"/>-->

        <Button
                android:id="@+id/skip_button"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Skip"
                android:background="@drawable/rounded_button"
                android:textColor="@color/black" android:layout_alignParentStart="true"
                android:layout_marginStart="284dp" android:layout_marginLeft="16dp" android:layout_marginTop="810dp"
                android:layout_marginRight="16dp" android:layout_marginEnd="38dp" android:layout_marginBottom="16dp"/>
    </RelativeLayout>
</RelativeLayout>
